{
    "name":        "vivi90/miniworx",
    "description": "A simple web app framework.",
    "type":        "library",
    "authors": [
        {
            "name":  "Vivien Richter",
            "email": "vivien-richter@outlook.de",
            "role":  "Developer"
        },
        {
            "name":  "Paul Ward",
            "email": "asmodai@gmail.com",
            "role":  "Hacker"
        }
    ],
    "license": "MIT",
    "require": {
        "php":              "^7.0",
        "ext-openssl":      "*",
        "firebase/php-jwt": "*",
        "neomerx/json-api": "*"
    },
    "require-dev": {
        "phpmd/phpmd":                    "@stable",
        "squizlabs/php_codesniffer":      "3.*",
        "pheromone/phpcs-security-audit": "*",
        "phpdocumentor/phpdocumentor":    "^2.9.0",
        "phpmetrics/phpmetrics":          "*"
    },
    "config": {
        "preferred-install":      "dist",
        "sort-packages":          true,
        "optimize-autoloader":    true,
        "classmap-authoritative": true
    },
    "autoload": {
        "psr-4": {
            "miniworx\\": "."
        }
    }
}
